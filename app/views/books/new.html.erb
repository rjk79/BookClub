<div class="flex">
<h1>Create New Book</h1>

<form class="flex" action="<%= books_url %>" method="post">
  <label for="title">Title</label>
  <input type="text" name="book[title]" value="" id="title">

  <label for="author">Author</label>
  <input type="text" name="book[author]" value="" id="author">

  <label for="genre">Genre</label>
  <input type="text" name="book[genre]" value="" id="genre">

  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input class="createbook-button" type="submit" value="Create New book">
</form>

</div>
